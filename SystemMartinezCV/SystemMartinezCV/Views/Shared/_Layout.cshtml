<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="wrapper">
        <div class="sidebar">
            <div class="bg_shadow"></div>
            <div class="sidebar__inner">
                <div class="close">
                </div>
                <div class="LogoSM">
                    <div class="img">
                        <img src="~/Content/LogoSM.jpeg">
                    </div>
                </div>
                <ul class="siderbar_menu">
                    <li>
                        <a href="#">
                            <div class="icon"><i class="fab fa-product-hunt"></i></div>
                            <div class="title">Productos</div>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <div class="icon"><i class="fas fa-cart-arrow-down"></i></div>
                            <div class="title">Compras</div>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <div class="icon"><i class="fas fa-file-alt"></i></div>
                            <div class="title">Ventas</div>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <div class="icon"><i class="fas fa-border-all"></i></div>
                            <div class="title">Proyectos</div>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <div class="icon"><i class="fas fa-users"></i></div>
                            <div class="title">Empleados</div>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <div class="icon"><i class="fas fa-paste"></i></div>
                            <div class="title">Reportes</div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main_container">
            <div class="top_navbar">
                <div class="hamburger">
                    <div class="hamburger__inner">
                        <i class="fas fa-bars"></i>
                    </div>
                </div>
                <ul class="menu">
                    <li><a href="#"></a></li>
                    <li><a href="#"></a></li>
                    <li><a href="#"></a></li>
                </ul>
                <ul class="right_bar">
                    <li><i class="fas fa-bell"></i></li>
                    <li><i class="fas fa-users"></i></li>
                </ul>
            </div>
            <div class="container">
                <div class="row">
                    <center>
                        <h1>Highway to hell</h1>
                    </center>
                </div>
            </div>
                <div>
                    @RenderBody()
                </div>
        </div>
    </div>

            <script src="~/Scripts/jquery-3.4.1.min.js"></script>
            <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>