<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>

    <div class="wrapper">
        <div class="top_navbar">
            <div class="logo">
                <a href="#">
                    <span><img src="~/Content/LogoSM.jpeg" width="140" height="140" /></span>
                    <span>Martinez</span>
                </a>
            </div>

            <div class="top_menu">
                <div class="home_link">
                </div>
                <div class="wrapper">
          
                </div>
                <!--<div class="right_info">
                    <div class="icon_wrap">
                        <div class="icon">
                            <i class="fas fa-bell"></i>
                        </div>
                    </div>
                    <div class="icon_wrap">
                        <div class="icon">
                            <i class="fas fa-cog"></i>
                        </div>
                    </div>-->
                <div class="menu">
                    <div class="home_link">
                        <a href="#">
                            <span><i class="far fa-user"></i></span>
                            <span>Iniciar Sesion</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>


        <div class="main_body">

            <div class="sidebar_menu">
                <div class="inner__sidebar_menu">

                    <ul>
                        <li>
                            <a href="#">
                                <span class="icon">
                                    <i class="fab fa-product-hunt"></i>
                                </span>
                                <span class="list">Productos</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <span class="icon"><i class="fa fa-shopping-cart" aria-hidden="true"></i></span>
                                <span class="list">Compras</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <span class="icon"><i class="fas fa-chalkboard-teacher"></i></span>
                                <span class="list">Proyectos</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <span class="icon"><i class="fas fa-file-invoice-dollar"></i></span>
                                <span class="list">Ventas</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <span class="icon"><i class="fa fa-users" aria-hidden="true"></i></span>
                                <span class="list">Empleados</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <span class="icon"><i class="fa fa-folder-open" aria-hidden="true"></i></span>
                                <span class="list">Reportes</span>
                            </a>
                        </li>

                      
                    </ul>

                </div>
            </div>
            <div class="container">
                <div>
                    <center>
                        <h1>Welcome to the jungle</h1>
                    </center>
                </div>
            </div>
            <div class="container">
                @RenderBody()
            </div>
        </div>
    </div>

            <script src="~/Scripts/jquery-3.4.1.min.js"></script>
            <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>