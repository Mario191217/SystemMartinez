
@{
    ViewBag.Title = "Index";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->

    <title>Hello, world!</title>
</head>

<body>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Recipient:</label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">Message:</label>
                            <textarea class="form-control" id="message-text"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>
    <br />
    <form class="jumbotron">
        <div class="card" style="background-color: #2C3E50; color: #fff">
            <div class="card-header">
                <center>Seccion 1</center>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-md-3">
                        <label>Nombre de proyecto</label>
                        <input id="Proyecto" type="text" class="form-control">
                    </div>
                    <div class="form-group col-md-3">
                        <label>Numero de referencia proyecto</label>
                        <input id="NumeroProyecto" type="number" class="form-control">
                    </div>
                    <div class="form-group col-md-3">
                        <label>Fecha de inicio</label>
                        <input id="FechaInicio" type="text" class="form-control">
                    </div>
                    <div class="form-group col-md-3">
                        <label>Fecha finalizado</label>
                        <input id="FechaFin" type="text" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="form-group col-md-3">
                        <label>Clientes</label>
                        <select id="IdCliente" class="form-control" name="IdCliente">
                            @{
                                foreach (var item in ViewBag.Clientes)
                                {
                                    <option value="@item.IdCliente">@item.Nombre</option>
                                }
                            }
                        </select>
                        <br>
                    </div>
                    <div class="form-group col-md-3">
                        <label>Direccion</label>
                        <input id="Ubicacion" type="text" class="form-control" placeholder="Last name">
                    </div>
                    <div class="form-group col-md-3">
                        <label>monto</label>
                        <input id="MontoFinal" type="number" step="0.01" class="form-control" placeholder="First name">
                    </div>
                    <div class="form-group col-md-3">
                        <label>Vendedor</label>
                        <select id="IdEmpleado" class="form-control" name="IdEmpleado">
                            @{
                                foreach (var item in ViewBag.Empleados)
                                {
                                    <option value="@item.IdEmpleado">@item.Nombre</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row form-group">
                    <label>Descripcion</label>
                    <input type="text" id="Descripcion" class="form-control" style="margin-left:1%;margin-right:1%" />
                </div>
                <br />
                <a href="#" class="btn btn-primary" style="width:30%;" id="BtnProyecto">Guardar</a>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">Agregar cliente</button>
            </div>
        </div>



        <br />

        <div class="row">
            <div class="col-sm-6">
                <div class="card" style="background-color: #2C3E50; color: #fff">
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-4">
                                <input type="text" class="form-control" placeholder="Firaast name">
                            </div>
                            <div class="form-group col-md-4">
