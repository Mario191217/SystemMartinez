
@{
    ViewBag.Title = "General";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>
<body>
    <form method="post" class="jumbotron" action="@Url.Action("AddProject","GestionProyectos")" style="background-color: #101127; color: #ffffff;">
        <center> <h3>Ingrese Proyecto</h3></center>
        <hr>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="Proyecto">Proyecto</label>
                <input type="text" class="form-control" name="Proyecto">
            </div>
            <div class="form-group col-md-2">
                <label for="Cliente">Cliente</label>
                <select id="IdCliente" class="form-control" name="IdCliente">
                    @{
                        foreach (var item in ViewBag.Clientes)
                        {
                            <option value="@item.IdCliente">@item.Nombre</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="Monto">Monto Final</label>
                <input type="text" class="form-control" name="MontoFinal">
            </div>
            <div class="form-group col-md-2">
                <label for="Comicion">Comicion</label>
                <input type="text" class="form-control" name="Comision">
            </div>
            <div class="form-group col-md-2">
                <label for="Empleado">Empleado</label>
                <select id="IdEmpleado" class="form-control" name="IdEmpleado">
                    @{
                        foreach (var item in ViewBag.Empleados)
                        {
                            <option value="@item.IdEmpleado">@item.Nombre</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="Ubicacion">Ubicacion</label>
                <input type="text" class="form-control" name="Ubicacion">
            </div>
            <div class="form-group col-md-2">
                <label for="FechaN">Fecha de Inicio</label>
                <input type="date" class="form-control" name="FechaInicio">
            </div>
            <div class="form-group col-md-2">
                <label for="FechaR">Fecha de Registro</label>
                <input type="date" class="form-control" name="FechaFin">
            </div>
        </div>

        <input type="submit" class="btn btn-success" value="Guardar y Añadir subproyectos"/>
    </form>

    <br>
    <form class="jumbotron" style="background-color: #101127; color: #ffffff;">
        <center> <h3>Ingrese Sub Proyecto</h3></center>
        <hr>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="ProyectoP">Proyecto </label>
                <input type="text" class="form-control" id="Proyectop">
            </div>
            <div class="form-group col-md-2">
                <label for="NProyecto">Nombre de Proyecto</label>
                <input type="text" class="form-control" id="NProyecto">
            </div>
            <div class="form-group col-md-2">
                <label for="Cantidad">Cantidad</label>
                <input type="text" class="form-control" id="Cantidad">
            </div>
            <div class="form-group col-md-2">
                <label for="Precio">Precio</label>
                <input type="text" class="form-control" id="Precio">
            </div>
            <div class="form-group col-md-2">
                <label for="Proyecto">Proyecto</label>
                <input type="text" class="form-control" id="Proyecto">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="Total">Total</label>
                <input type="text" class="form-control" id="Total">
            </div>
            <div class="form-group col-md-2">
                <label for="UnidadMedida">Unidad de medida</label>
                <input type="text" class="form-control" id="UnidadMedida">
            </div>
        </div>

        <button type="button" class="btn btn-success" style="width: 20%;">Guardar</button>
    </form>
    <br>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">N</th>
                <th scope="col">ProyectoP</th>
                <th scope="col">Nombre Proyecto</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Precio</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-success" style="width: 10%;">Guardar</button>
    <button type="button" class="btn btn-info">Regresar</button>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>
